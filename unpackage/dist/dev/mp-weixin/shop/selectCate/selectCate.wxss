.pageview {
  height: 100%;
}
.pageview .main {
  overflow: auto;
}
.pageview .main .cate-item {
  margin: 20rpx 30rpx;
}
.topbar {
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #EAEAEA;
  -webkit-mask: -webkit-gradient(linear, left top, right bottom, from(black), color-stop(0.75, #fff), to(transparent));
}
.topbar .scrollview {
    line-height: 100rpx;
    color: #A5A5A5;
    font-size: 30rpx;
}
.topbar .scrollview ._span {
      position: relative;
      display: inline-block;
}
.topbar .scrollview ._span + ._span {
        margin-left: 65rpx;
}
.topbar .scrollview ._span.active {
        color: #19A967;
}
.topbar .scrollview ._span.active:after {
        content: '';
        background: #19A967;
        display: block;
        height: 5rpx;
        width: 35rpx;
        position: absolute;
        bottom: 1rpx;
        left: 50%;
        -webkit-transform: translateX(-50%);
            -ms-transform: translateX(-50%);
                transform: translateX(-50%);
}
.tabbar {
  border-top: 1px solid #F1F1F1;
}

