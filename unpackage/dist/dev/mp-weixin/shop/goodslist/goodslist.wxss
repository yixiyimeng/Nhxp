.pageview {
  height: 100%;
}
.pageview .main {
  overflow: auto;
}
.pageview .main .cate-item {
  margin: 20rpx 30rpx;
}
.topbar {
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #EAEAEA;
}
.topbar > .flex-sub {
    width: 200rpx;
}
.topbar .add {
    width: 190rpx;
    height: 64rpx;
    background: #19a967;
    -webkit-box-shadow: 0 2rpx 9rpx 0 rgba(25, 169, 103, 0.58);
            box-shadow: 0 2rpx 9rpx 0 rgba(25, 169, 103, 0.58);
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #fff;
    line-height: 64rpx;
    text-align: center;
    margin-left: 25rpx;
}
.topbar .add .cuIcon-add {
      font-size: 30rpx;
}
.topbar .scrollview {
    line-height: 100rpx;
    color: #A5A5A5;
    font-size: 30rpx;
    width: 100%;
    -webkit-mask: -webkit-gradient(linear, left top, right bottom, from(black), color-stop(0.75, #fff), to(transparent));
}
.topbar .scrollview ._span {
      position: relative;
      display: inline-block;
}
.topbar .scrollview ._span + ._span {
        margin-left: 35rpx;
}
.topbar .scrollview ._span.active {
        color: #19A967;
}
.topbar .scrollview ._span.active:after {
        content: '';
        background: #19A967;
        display: block;
        height: 5rpx;
        width: 35rpx;
        position: absolute;
        bottom: 0;
        left: 50%;
        -webkit-transform: translateX(-50%);
            -ms-transform: translateX(-50%);
                transform: translateX(-50%);
}
.tabbar {
  border-top: 1px solid #F1F1F1;
}

