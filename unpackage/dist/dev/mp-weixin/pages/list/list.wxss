page,
.view-page {
  height: 100%;
  overflow: hidden;
  position: relative;
}
.mt20 {
  margin-top: 20rpx;
}
.grid .submenu {
  width: 170rpx;
  margin-right: 2rpx;
  text-align: center;
  color: #6D6D6D;
  height: 100%;
  overflow: hidden;
  position: relative;
  /* border-right: 1px solid #eee; */
  /* border-top: 1px solid #eee; */
  background: #FBFBFB;
}
.grid .submenu:after {
  content: '';
  position: absolute;
  right: 0;
  width: 2rpx;
  top: 0;
  bottom: 0;
  background: #DBDBDB;
}
.grid .submenu .submenu-item {
  height: 100rpx;
  border-bottom: 1px solid transparent;
  padding: 0 20rpx;
  text-align: center;
  position: relative;
  z-index: 99;
}
.grid .submenu .submenu-item.active {
  color: #FF5454;
  background: #fff;
  border-bottom: 1px solid #DBDBDB;
}
.grid .submenu .submenu-item.active:before {
  content: '';
  position: absolute;
  left: 0;
  width: 6rpx;
  height: 46rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
  background: #ff5454;
}
.grid .submenu .submenu-item.active:after {
  content: '';
  position: absolute;
  right: -10rpx;
  width: 20rpx;
  top: 0;
  bottom: 0;
  background: #fff;
}
.grid .submenu .submenu-item ._span {
  line-height: 100rpx;
  display: block;
  width: 100%;
}
.grid .submenu .submenu-item ._i {
  display: none;
  font-style: normal;
  color: #fff;
  background: #ff5454;
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 20rpx;
  padding: 2rpx 12rpx;
  font-size: 20rpx;
  line-height: 25rpx;
}
.grid .submenu .submenu-item ._i.show {
  display: block;
}
.filterbar {
  line-height: 100rpx;
  overflow: hidden;
  padding-right: 30rpx;
}
.filterbar .filter-item {
  float: right;
  color: #ADADAD;
  font-size: 26rpx;
  margin-left: 50rpx;
}
.cu-dialog {
  padding: 50rpx 30rpx 70rpx;
  background: #fff;
  position: relative;
  text-align: left;
}
.cu-dialog .close {
    position: absolute;
    right: 52rpx;
    top: 35rpx;
    height: 44rpx;
    width: 44rpx;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100% auto;
    z-index: 99;
}
.cu-dialog .title {
    color: #1D1D1D;
    font-size: 28rpx;
}
.cu-dialog .title + ._p {
      color: #808080;
      font-size: 25rpx;
      margin: 24rpx 0 58rpx;
}
.cu-dialog .btn {
    width: 520rpx;
    height: 80rpx;
    background: #fb595f;
    -webkit-box-shadow: 0 11rpx 16rpx 0 rgba(251, 89, 95, 0.17);
            box-shadow: 0 11rpx 16rpx 0 rgba(251, 89, 95, 0.17);
    border-radius: 8rpx;
    margin: 0 auto;
    color: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
