@charset "UTF-8";
page,
.view-page {
  height: 100%;
  overflow: hidden;
  position: relative;
  background: #ededed;
}
.topbar {
  height: 110rpx;
  position: relative;
}
.topbar > .flex-sub {
    width: 200rpx;
    padding-left: 25rpx;
    padding-right: 5rpx;
}
.topbar .nav {
    height: 106rpx;
}
.topbar .scrollview {
    line-height: 106rpx;
    color: #000;
    font-weight: blod;
    font-size: 28rpx;
}
.topbar .scrollview ._span {
      position: relative;
      display: inline-block;
}
.topbar .scrollview ._span + ._span {
        margin-left: 50rpx;
}
.topbar .scrollview ._span.active {
        color: #fc733b;
        font-size: 32rpx;
}
.topbar .line {
    width: 2rpx;
    height: 55rpx;
    display: block;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 2rpx auto;
}
.topbar .arrow {
    width: 86rpx;
    height: 100%;
    display: block;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 36rpx auto;
}
.filterbar {
  height: 70rpx;
  border-top: 2rpx solid #ededed;
}
.filterbar > ._span {
    width: 25%;
    color: #727272;
    text-align: center;
    font-size: 28rpx;
}
.filterbar > ._span.active {
      color: #fc743c;
}
.filterbar > ._span image {
      width: 10rpx;
      margin-left: 10rpx;
}
.filterbar > ._span.filter image {
      width: 18rpx;
}
.main {
  overflow: auto;
  margin-top: 30rpx;
}
.action-list .action-item {
  color: #ff6202;
  font-size: 28rpx;
  line-height: 140rpx;
  text-align: center;
  padding: 0 75rpx;
  background: #fff;
  border-top: 1px solid #eee;
}
.action-list .action-item > ._span {
    color: #000;
}
.action-list .action-item > ._span.flex-sub {
      text-align: center;
}
.action-list .action-item > ._span.copy {
      color: #ff6202;
      border: 1px solid #ff6202;
      height: 50rpx;
      width: 100rpx;
      line-height: 50rpx;
      border-radius: 100rpx;
      font-size: 24rpx;
}
.cu-modal .cu-dialog {
  width: 600rpx;
  text-align: left;
  position: relative;
}
.cu-modal .title {
  color: #000;
  font-size: 28rpx;
  font-weight: blod;
}
.cu-modal .cuIcon-close {
  font-size: 40rpx;
  color: #303030;
}
.cu-modal .cu-modal-ft {
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  line-height: 70rpx;
  background: #ff6202;
}
.cu-modal .replylist {
  max-height: 300px;
  overflow: auto;
}
.cu-modal .close {
  position: absolute;
  right: 56rpx;
  top: 30rpx;
}
.mail-item {
  text-align: left;
  font-size: 24rpx;
  color: #9F9F9F;
  padding: 40rpx 50rpx;
  position: relative;
}
.mail-item .imgbox {
    width: 200rpx;
    background: #fff;
    border: 1px solid #E8E8E8;
    border-radius: 10rpx;
    margin-right: 50rpx;
}
.mail-item .imgbox image {
      width: 100%;
}
.mail-item .name {
    font-size: 34rpx;
    color: #000;
    font-weight: bold;
}
.mail-item .price {
    font-style: normal;
    display: inline-block;
    color: #e03d3e;
    font-size: 38rpx;
}
.mail-item .addcarbtn {
    font-size: 30rpx;
    color: #fff;
    border-radius: 16rpx;
    width: 100%;
    height: 100rpx;
    display: block;
    text-align: center;
    line-height: 100rpx;
    margin-top: 20rpx;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#fb9449), to(#fc753c));
    background-image: -o-linear-gradient(#fb9449, #fc753c);
    background-image: linear-gradient(#fb9449, #fc753c);
}
.mail-item .state {
    color: #FF9518;
    font-size: 22rpx;
    margin-left: 10rpx;
}
.mail-item .tag {
    color: #fff;
    background: #e60012;
    line-height: 25rpx;
    height: 25rpx;
    display: inline-block;
    padding: 0 10rpx;
    border-radius: 5rpx;
    font-size: 16rpx;
    margin-right: 10rpx;
}
.mail-item .mailname {
    color: #7E7E7E;
    font-size: 22rpx;
    margin-left: 10rpx;
}
.mail-item .goodstag {
    background: #f2f3f7;
    margin-top: 30rpx;
    padding: 5rpx 20rpx;
}
.mail-item .goodstag > view {
      width: 30%;
      padding: 10rpx 0;
}
.mail-item .goodstag > view:nth-child(3n+2) {
        width: 40%;
}
.mail-item .goodsinfo {
    font-size: 20rpx;
}
.mail-item .goodsinfo .title {
      color: #000;
      font-size: 28rpx;
}
.mail-item .goodsinfo ._p {
      margin: 20rpx 0;
}
/* 筛选 */
.drawer-modal .title {
  font-size: 30rpx;
  color: #000;
}
.drawer-modal .cu-tag {
  padding: 0 48rpx;
  height: 60rpx;
  margin: 20rpx 10rpx;
}
.drawer-modal .filterftbar {
  padding: 50rpx 0;
}
.drawer-modal .filterftbar ._span {
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fc743b;
    border: 1px solid #fc743b;
    border-radius: 10rpx;
    text-align: center;
}
.drawer-modal .filterftbar ._span + ._span {
      margin-left: 120rpx;
      color: #fff;
      background-image: -webkit-gradient(linear, left top, right top, from(#fe8c2d), to(#fe5504));
      background-image: -o-linear-gradient(left, #fe8c2d, #fe5504);
      background-image: linear-gradient(90deg, #fe8c2d, #fe5504);
}
/* 所有分类 */
.top-modal {
  top: 180rpx;
  z-index: 998;
}
.top-modal .cu-tag {
    line-height: 62rpx;
    padding: 0 25rpx;
    margin: 10rpx 15rpx;
    font-size: 28rpx;
}

