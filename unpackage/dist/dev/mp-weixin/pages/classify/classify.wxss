page,
.pageview {
  height: 100%;
  width: 100%;
  overflow: hidden;
}
page .menu,
  .pageview .menu {
    height: 100%;
    width: 170rpx;
    text-align: center;
}
page .menu .tab-bar-item,
    .pageview .menu .tab-bar-item {
      line-height: 70rpx;
      color: #000;
      font-size: 26rpx;
      border-top: 3rpx solid #fff;
      background: #f5f4f9;
}
page .menu .tab-bar-item.active,
      .pageview .menu .tab-bar-item.active {
        color: #fc743c;
        background: #fff;
}
page .tab-view,
  .pageview .tab-view {
    height: 100%;
}
page .tab-view .menulist,
    .pageview .tab-view .menulist {
      padding: 20rpx;
}
page .tab-view .menulist .menu-item,
      .pageview .tab-view .menulist .menu-item {
        text-align: center;
        color: #000;
        font-size: 24rpx;
        width: 30%;
}
page .tab-view .menulist .menu-item ._p,
        .pageview .tab-view .menulist .menu-item ._p {
          margin: 25rpx 0;
}
page .tab-view .menulist .menu-item image,
        .pageview .tab-view .menulist .menu-item image {
          display: block;
          width: 100%;
}
page .tab-view .menulist .menu-item:nth-child(3n+2),
        .pageview .tab-view .menulist .menu-item:nth-child(3n+2) {
          margin: 0 5%;
}

