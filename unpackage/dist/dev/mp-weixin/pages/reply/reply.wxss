.pageview,
page {
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.pageview .reply-hd,
  page .reply-hd {
    color: #8e8e8d;
    padding: 0 60rpx;
    height: 140rpx;
    font-size: 22rpx;
    border-bottom: 1px solid #eee;
}
.pageview .reply-hd .title,
    page .reply-hd .title {
      color: #000;
      font-size: 28rpx;
      margin-right: 30rpx;
}
.pageview .reply-hd .num,
    page .reply-hd .num {
      color: #fc743c;
      margin-left: 30rpx;
}
.pageview .main,
  page .main {
    overflow: auto;
}
.pageview .main .list .cmtreply,
    page .main .list .cmtreply {
      padding: 10rpx 40rpx;
      border-bottom: 1px solid #eee;
}

